<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_soft_black"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="100dp" >

    <LinearLayout
        android:id="@+id/login_email_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" >

        <EditText
            android:id="@+id/login_email_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="left|center_vertical"
            android:hint="@string/enter_email"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/login_textfield_text"
            android:textColorHint="@color/login_textfield_hint"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/login_divider_edittext"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/login_email_text_layout"
        android:alpha="1"
        android:background="@color/login_textfield_divider" />

    <LinearLayout
        android:id="@+id/login_password_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_divider_edittext"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" >

        <EditText
            android:id="@+id/login_password_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="@string/enter_password"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/login_textfield_text"
            android:textColorHint="@color/login_textfield_hint"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_text_layout"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_btn_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/login"
        android:textColor="@color/text_soft_black"
        android:textSize="18sp" />

    <com.vijayganduri.utils.CustomFontTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:paddingTop="20dp"
        android:maxLines="3"
        android:text="Please login with your Ola credentials"
        android:textColor="@color/color_place_detail"
        android:textSize="15sp"
        app:customTypeface="@string/font_light" />

</RelativeLayout>